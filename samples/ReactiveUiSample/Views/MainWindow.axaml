<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ReactiveUiSample.ViewModels"
        x:Class="ReactiveUiSample.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Width="640"
        Height="420"
        Title="INPC Field Generator â€” Avalonia Sample"
        mc:Ignorable="d">
  <Design.DataContext>
    <vm:MainViewModel />
  </Design.DataContext>

  <Grid RowDefinitions="Auto,Auto,*,Auto"
        Margin="24">
    <StackPanel Spacing="4">
      <TextBlock Text="INPC Field Generator"
                 FontSize="28"
                 FontWeight="Bold" />
      <TextBlock Text="ReactiveUI-powered sample built with Avalonia"
                 FontStyle="Italic"
                 Foreground="{DynamicResource ThemeForegroundLowBrush}" />
    </StackPanel>

    <Grid Grid.Row="1"
          ColumnDefinitions="*,*"
          Margin="0,20,0,0">
      <StackPanel Spacing="8">
        <TextBlock Text="First Name"
                   FontWeight="SemiBold" />
        <TextBox Text="{Binding FirstName}" />
      </StackPanel>

      <StackPanel Grid.Column="1"
                  Spacing="8"
                  Margin="16,0,0,0">
        <TextBlock Text="Last Name"
                   FontWeight="SemiBold" />
        <TextBox Text="{Binding LastName}" />
      </StackPanel>
    </Grid>

    <Border Grid.Row="2"
            Background="#FFEFF3"
            CornerRadius="8"
            Padding="20"
            Margin="0,20,0,0">
      <StackPanel Spacing="12">
        <TextBlock Text="Live Preview"
                   FontSize="18"
                   FontWeight="SemiBold" />
        <TextBlock Text="{Binding FullName}"
                   FontSize="24"
                   FontWeight="SemiBold" />
        <TextBlock Text="{Binding ChangingStatus}"
                   FontStyle="Italic"
                   Foreground="{DynamicResource ThemeForegroundLowBrush}" />
      </StackPanel>
    </Border>

    <StackPanel Grid.Row="3"
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                Spacing="12"
                Margin="0,20,0,0">
      <Button Content="Increment counter"
              Command="{Binding IncrementCommand}" />
      <TextBlock Text="{Binding CounterText}"
                 VerticalAlignment="Center" />
    </StackPanel>
  </Grid>
</Window>
